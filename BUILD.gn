        "$target_gen_dir/es5/sfxr.js",
        "$target_gen_dir/es5/storagewrapper.js",
        "$target_gen_dir/plus/colors.js",
        "$target_gen_dir/plus/compiler.js",
        "$target_gen_dir/plus/debug.js",
        "$target_gen_dir/plus/debug_off.js",
        "$target_gen_dir/plus/engine.js",
        "$target_gen_dir/plus/font.js",
        "$target_gen_dir/plus/globalVariables.js",
        "$target_gen_dir/plus/graphics.js",
        "$target_gen_dir/plus/inputoutput.js",
        "$target_gen_dir/plus/parser.js",
        "$target_gen_dir/plus/riffwave.js",
        "$target_gen_dir/plus/rng.js",
        "$target_gen_dir/plus/sfxr.js",
        "$target_gen_dir/plus/storagewrapper.js",
    ]
    args = [
        "--out", rebase_path(target_gen_dir + "/bundled.h", root_build_dir),
    ] + rebase_path(inputs, root_build_dir)
    outputs = [ "$target_gen_dir/bundled.h" ]
}

source_set("quickjs") {
    sources = [
        "src/quickjs-2021-03-27/quickjs.c",
        "src/quickjs-2021-03-27/libregexp.c",
        "src/quickjs-2021-03-27/libunicode.c",
